@model EventPreviewPartialViewModel

<div class="col event">
    <article class="card h-100">
        <a href="@Url.Action("Event", "Events", new {id = Model.Id})" class="card-image"
           style="background-image: url('@Model.ImageURL');"></a>
        <div class="card-body d-flex flex-column">
            <a href="@Url.Action("Event", "Events", new {id = Model.Id})">
                <h5 class="card-title">@Model.Name</h5>
            </a>
            <p class="mb-1"><strong>@Model.DateRange</strong></p>
            <p class="mb-1"><strong>@Model.TimeRange</strong></p>
            <p class="card-text flex-grow-1">@Model.Excerpt</p>
            <div class="row">
                <span class="col my-auto">@($"From ${Model.LowestPrice}")</span>
                <span class="col-auto">
                    <a href="@Url.Action("Event", "Events", new {id = Model.Id})"
                       class="btn btn-outline-@Model.UIColor rounded-pill px-4">@Model.ButtonText</a>
                </span>
            </div>
        </div>
    </article>
</div>